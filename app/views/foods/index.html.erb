<h3>Foods</h3>

<table id="foods" class="table table-bordered">
  <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
  <% @foods.each_with_index do |food, index| %>
  <tr id="<%= dom_id food %>">
    <th scope="row"><%= index + 1 %></th>
    <td><%= link_to "#{ food.name }", food %></td>
    <td><%= food.measurement_unit %></td>
    <td><%= food.price %> $</td>
    <td>
      <%= button_to "Delete", food, method: :delete, class: "button-to-link" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New food", new_food_path %>
